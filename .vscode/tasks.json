{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "-std:c++20",
                "/O2",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/MD",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "lib\\pugixml.lib",
                "lib\\zlib.lib",
                "lib\\libminizip.lib",
                "lib\\bzip2.lib",
                "lib\\liblzma.lib",
                "lib\\zstd_static.lib",
                "bcrypt.lib",
                "${fileDirname}\\src\\*.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "build pugixml",
            "type": "shell",
            "command": "g++ -c lib/pugixml.cpp -o lib/pugixml.o",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "create pugixml library",
            "type": "shell",
            "command": "ar rcs lib/libpugixml.a lib/pugixml.o",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}